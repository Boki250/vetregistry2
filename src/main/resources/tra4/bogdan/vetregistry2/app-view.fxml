<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>


<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tra4.bogdan.vetregistry2.AppViewController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="Datoteka">
                <items>
                    <MenuItem text="Izhod" onAction="#handleExit"/>
                </items>
            </Menu>
            <Menu text="Pogled">
                <items>
                    <MenuItem text="Klinike"/>
                    <MenuItem text="Storitve"/>
                    <MenuItem text="Mesta"/>
                    <MenuItem text="Vrste"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <HBox alignment="TOP_CENTER" spacing="5.0">
        <TextField fx:id="inputFilterIme" promptText="Vnesite naziv" maxWidth="300.0" />
        <Button text="Išči" onAction="#applyFilter"/>
        <Button text="Počisti" onAction="#clearFilter"/>
        <Button text="Dodaj kliniko" onAction="#showClinicForm"/>
    </HBox>

    <TableView fx:id="clinicTable" prefWidth="600">
        <columns>
            <TableColumn text="Id" fx:id="clinicIdColumn" />
            <!-- Stolpec za ime klinike -->
            <TableColumn text="Ime klinike" fx:id="clinicTitleColumn" />
            <!-- Stolpec za naslov klinike -->
            <TableColumn text="Naslov" fx:id="clinicAddressColumn" />
            <TableColumn text="Mesto" fx:id="clinicTownColumn" />
            <!-- Stolpec za kontakt -->
            <TableColumn text="Telefonska številka" fx:id="clinicPhoneNumberColumn" />
        </columns>
    </TableView>


</VBox>
